# =============================================================================
# .env - Application config (do not commit real values)
# =============================================================================

# Auth URL for local dev (use http://localhost:3000 or http://<LOCAL_IP>:3000)
NEXTAUTH_URL="http://localhost:3000"

# Auth URL for staging production (e.g., https://your-app.vercel.app)
NEXTAUTH_URL_COPYPROD="https://your-app.vercel.app"

# Local PostgreSQL
DATABASE_URL="postgresql://<user>:<password>@localhost:5432/offer_insight"

# Vercel/Neon preview or dev database (copy of prod for testing)
DATABASE_URL_COPYPROD="postgres://<user>:<password>@ep-xxx-pooler.us-east-1.aws.neon.tech/<db>?sslmode=require"

# Production Neon database
DATABASE_URL_PROD="postgresql://<user>:<password>@ep-xxx-pooler.us-east-1.aws.neon.tech/<db>?sslmode=require"

# SMTP for email auth (e.g., Gmail app password)
EMAIL_SERVER="smtp://<email>:<app_password>@smtp.gmail.com:587"
EMAIL_FROM="noreply@example.com"

# Bcrypt work factor (higher = more secure, slower)
WORK_FACTOR="12"

# =============================================================================
# .env.local - Secrets (gitignored, never commit)
# =============================================================================

AUTH_SECRET="<generate with: openssl rand -base64 32>"
AUTH_GITHUB_ID="<from GitHub OAuth App>"
AUTH_GITHUB_SECRET="<from GitHub OAuth App>"

# Optional: Local IP for phone/WiFi access (e.g., 192.168.1.44). Omit in production.
LOCAL_IP="192.168.1.44"