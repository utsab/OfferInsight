generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model Applications removed – consolidated into Applications_with_Outreach

model Applications_with_Outreach {
  id                    Int     @id @default(autoincrement())
  company               String
  hiringManager         String?
  msgToManager          String?
  recruiter             String?
  msgToRecruiter        String?
  notes                 String?
  status                String  @default("applied")
  dateCreated           DateTime @default(now())
  userId                String
  user                  User    @relation(fields: [userId], references: [id])
}

model Linkedin_Outreach {
  id                  Int     @id @default(autoincrement())
  name                String
  company             String
  message             String?
  linkedInUrl         String?
  notes               String?
  status              String  @default("outreachRequestSent")
  dateCreated         DateTime @default(now())
  recievedReferral    Boolean @default(false)
  userId              String
  user                User    @relation(fields: [userId], references: [id])
}

model In_Person_Events {
  id                  Int      @id @default(autoincrement())
  event               String
  date                DateTime
  location            String?
  url                 String?
  notes               String?
  numPeopleSpokenTo   Int?
  numLinkedInRequests Int?
  careerFair          Boolean  @default(false)
  numOfInterviews     Int?
  userId              String
  user                User     @relation(fields: [userId], references: [id])
  status              String   @default("scheduled")
}

model LeetCode {
  id          Int      @id @default(autoincrement())
  problem     String?
  problemType String?
  difficulty  String?
  url         String?
  reflection  String?
  status      String   @default("planned")
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

// model Career_Fairs removed – merged into In_Person_Events

model User {
  id                                  String                        @id @default(cuid())
  name                                String?
  email                               String?                       @unique
  image                               String?
  createdAt                           DateTime                      @default(now())
  // applications removed – use applicationsWithOutreach instead
  applicationsWithOutreach            Applications_with_Outreach[]
  linkedinOutreach                    Linkedin_Outreach[]
  inPersonEvents                      In_Person_Events[]
  leetCode                            LeetCode[]
  emailVerified                       DateTime?
  accounts                            Account[]
  onboarding_progress                 Int                          @default(0)
  school                              String?
  major                               String?
  expectedGraduationDate              DateTime?
  projected_offer_date                DateTime?
  monthsToSecureInternship            Int?
  commitment                          Int?
  apps_with_outreach_per_week         Int?
  info_interview_outreach_per_month   Int?
  in_person_events_per_month          Int?
  career_fairs_quota                  Int?                         @default(1)                        
}

model VerificationToken {
  id              String   @id @default(cuid())
  identifier      String? 
  email           String?
  token           String?   @unique
  expires         DateTime

  @@unique([identifier, token])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String   @unique
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

