generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// model Applications removed – consolidated into Applications_with_Outreach

model Applications_With_Outreach {
  id                    Int       @id @default(autoincrement())
  company               String
  linkToJobPosting      String?
  hiringManager         String?
  msgToManager          String?
  recruiter             String?
  msgToRecruiter        String?
  notes                 String?
  status                String    @default("apply")
  dateCreated           DateTime  @default(now())
  dateModified         DateTime?
  userId                String
  user                  User      @relation(fields: [userId], references: [id])
}

model Linkedin_Outreach {
  id                  Int       @id @default(autoincrement())
  name                String
  company             String
  firstMessage        String?
  secondMessage       String?
  linkedInUrl         String?
  notes               String?
  recievedReferral    Boolean   @default(false)
  status              String    @default("prospects")
  dateCreated         DateTime  @default(now())
  dateModified       DateTime?
  userId              String
  user                User      @relation(fields: [userId], references: [id])
}

model In_Person_Events {
  id                    Int       @id @default(autoincrement())
  event                 String
  date                  DateTime
  location              String?
  url                   String?
  notes                 String?
  nameOfPersonSpokenTo  String?
  sentLinkedInRequest   Boolean   @default(false)
  careerFair            Boolean   @default(false)
  followUpMessage       String?
  status                String    @default("plan")
  dateCreated           DateTime  @default(now())
  dateModified         DateTime?
  userId                String
  user                  User      @relation(fields: [userId], references: [id])
}

model Leetcode_Practice {
  id          Int      @id @default(autoincrement())
  problem     String?
  problemType String?
  difficulty  String?
  url         String?
  reflection  String?
  status      String  @default("plan")
  dateCreated         DateTime  @default(now())
  dateModified       DateTime?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

// model Career_Fairs removed – merged into In_Person_Events

model User {
  id                     String                @id @default(cuid())
  name                   String?
  email                  String?               @unique
  image                  String?
  createdAt              DateTime              @default(now())
  resetStartDate         DateTime              @default(now())
  // applications removed – use applicationsWithOutreach instead
  applicationsWithOutreach Applications_With_Outreach[]
  linkedinOutreach       Linkedin_Outreach[]
  inPersonEvents         In_Person_Events[]
  leetCode               Leetcode_Practice[]
  openSource             OpenSourceEntry[]
  emailVerified          DateTime?
  accounts               Account[]
  onboardingProgress     Int                   @default(0)
  school                 String?
  major                  String?
  expectedGraduationDate DateTime?
  targetOfferDate         DateTime?
  projectedOfferDate     DateTime?
  monthsToSecureInternship Int?
  commitment             Int?
  appsWithOutreachPerWeek Int?
  linkedinOutreachPerWeek Int?
  inPersonEventsPerMonth Int?
  careerFairsPerYear     Int?
  partnerships           UserPartnership[]
}

model Partnership {
  id              Int       @id
  name            String
  linkedIn        String?
  company         String?
  role            String?
  activeUserCount Int       @default(0)
  maxUsers        Int       @default(5)
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  userPartnerships UserPartnership[]
}

model UserPartnership {
  id              Int         @id @default(autoincrement())
  userId          String
  partnershipId   Int
  status          String      @default("active")  // "active", "completed", "abandoned"
  selections      Json?       // Store multiple choice selections: { "0": "high_quality_question" }
  startedAt       DateTime    @default(now())
  completedAt     DateTime?
  user            User        @relation(fields: [userId], references: [id])
  partnership     Partnership @relation(fields: [partnershipId], references: [id])
}

model OpenSourceEntry {
  id                Int       @id @default(autoincrement())
  partnershipName   String
  criteriaType      String?   // e.g., "issue", "blog_post", "multiple_choice"
  metric            String?
  status          String    @default("plan")
  selectedExtras  Json?     // Array of criteria types: ["receive_feedback", "closer"]
  planFields      Json?     // Definition: [{ type: "URL", text: "Link..." }]
  planResponses   Json?     // Answers for plan phase
  babyStepFields  Json?     // Definition: [{ type: "URL", text: "Find..." }]
  babyStepResponses Json?   // Answers for baby step phase
  proofOfCompletion Json?     // Definition: [{ type: "URL", text: "Link..." }]
  proofResponses    Json?     // Answers for completion phase
  dateCreated     DateTime  @default(now())
  dateModified    DateTime?
  userId          String
  user            User      @relation(fields: [userId], references: [id])
}

model VerificationToken {
  id              String   @id @default(cuid())
  identifier      String? 
  email           String?
  token           String?   @unique
  expires         DateTime

  @@unique([identifier, token])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String   @unique
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Instructor {
  id                String   @id @default(cuid())
  username          String   @unique
  password          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

