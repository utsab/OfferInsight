generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Applications {
  id          Int     @id @default(autoincrement())
  company     String
  firstRound  Boolean
  finalRound  Boolean
  offer       Boolean
  userId      String
  user        User    @relation(fields: [userId], references: [id])
}

model Applications_with_Outreach {
  id                    Int     @id @default(autoincrement())
  company               String
  hiringManager         String?
  msgToManager          String?
  recruiter             String?
  msgToRecruiter        String?
  notes                 String?
  status                String  @default("applied")
  userId                String
  user                  User    @relation(fields: [userId], references: [id])
}

model Linkedin_Outreach {
  id           Int     @id @default(autoincrement())
  name         String
  company      String
  message      String?
  linkedInUrl  String?
  notes        String?
  status       String  @default("responded")
  userId       String
  user         User    @relation(fields: [userId], references: [id])
}

model In_Person_Events {
  id                  Int     @id @default(autoincrement())
  event               String
  date                String
  location            String?
  url                 String?
  notes               String?
  numPeopleSpokenTo   Int?
  numLinkedInRequests Int?
  userId              String
  user                User    @relation(fields: [userId], references: [id])
  status              String  @default("scheduled")
}

model Career_Fairs {
  id                  Int     @id @default(autoincrement())
  event               String
  date                String
  location            String?
  url                 String?
  notes               String?
  userId              String
  user                User    @relation(fields: [userId], references: [id])
  status              String  @default("scheduled")
}

model User {
  id                                  String                        @id @default(cuid())
  name                                String?
  email                               String?                       @unique
  image                               String?
  createdAt                           DateTime                      @default(now())
  applications                        Applications[]
  applicationsWithOutreach            Applications_with_Outreach[]
  linkedinOutreach                    Linkedin_Outreach[]
  inPersonEvents                      In_Person_Events[]
  careerFairs                         Career_Fairs[]
  emailVerified                       DateTime?
  accounts                            Account[]
  onboarding_progress                 Int                          @default(0)
  school                              String?
  major                               String?
  expectedGraduationDate              DateTime?
  monthsToSecureInternship            Int?
  commitment                          Int?
  applications_per_week               Int?
  apps_with_outreach_per_week         Int?
  info_interview_outreach_per_week    Int?
  in_person_events_per_month           Int?
}

model VerificationToken {
  id              String   @id @default(cuid())
  identifier      String? 
  email           String?
  token           String?   @unique
  expires         DateTime

  @@unique([identifier, token])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String   @unique
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

