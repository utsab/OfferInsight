generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// model Applications removed – consolidated into Applications_with_Outreach

model Applications_With_Outreach {
  id                    Int       @id @default(autoincrement())
  company               String
  linkToJobPosting      String?
  hiringManager         String?
  msgToManager          String?
  recruiter             String?
  msgToRecruiter        String?
  notes                 String?
  status                String    @default("apply")
  dateCreated           DateTime  @default(now())
  dateModified         DateTime?
  userId                String
  user                  User      @relation(fields: [userId], references: [id])
}

model Linkedin_Outreach {
  id                  Int       @id @default(autoincrement())
  name                String
  company             String
  firstMessage        String?
  secondMessage       String?
  linkedInUrl         String?
  notes               String?
  recievedReferral    Boolean   @default(false)
  status              String    @default("sendOutreachRequest")
  dateCreated         DateTime  @default(now())
  dateModified       DateTime?
  userId              String
  user                User      @relation(fields: [userId], references: [id])
}

model In_Person_Events {
  id                    Int       @id @default(autoincrement())
  event                 String
  date                  DateTime
  location              String?
  url                   String?
  notes                 String?
  nameOfPersonSpokenTo  String?
  sentLinkedInRequest   Boolean   @default(false)
  careerFair            Boolean   @default(false)
  followUpMessage       String?
  status                String    @default("scheduling")
  dateCreated           DateTime  @default(now())
  dateModified         DateTime?
  userId                String
  user                  User      @relation(fields: [userId], references: [id])
}

model Leetcode_Practice {
  id          Int      @id @default(autoincrement())
  problem     String?
  problemType String?
  difficulty  String?
  url         String?
  reflection  String?
  status      String  @default("planning")
  dateCreated         DateTime  @default(now())
  dateModified       DateTime?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

// model Career_Fairs removed – merged into In_Person_Events

model User {
  id                     String                @id @default(cuid())
  name                   String?
  email                  String?               @unique
  image                  String?
  createdAt              DateTime              @default(now())
  resetStartDate         DateTime              @default(now())
  // applications removed – use applicationsWithOutreach instead
  applicationsWithOutreach Applications_With_Outreach[]
  linkedinOutreach       Linkedin_Outreach[]
  inPersonEvents         In_Person_Events[]
  leetCode               Leetcode_Practice[]
  emailVerified          DateTime?
  accounts               Account[]
  onboardingProgress     Int                   @default(0)
  school                 String?
  major                  String?
  expectedGraduationDate DateTime?
  targetOfferDate         DateTime?
  projectedOfferDate     DateTime?
  monthsToSecureInternship Int?
  commitment             Int?
  appsWithOutreachPerWeek Int?
  linkedinOutreachPerWeek Int?
  inPersonEventsPerMonth Int?
  careerFairsPerYear     Int?
}

model VerificationToken {
  id              String   @id @default(cuid())
  identifier      String? 
  email           String?
  token           String?   @unique
  expires         DateTime

  @@unique([identifier, token])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String   @unique
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Instructor {
  id                String   @id @default(cuid())
  username          String   @unique
  password          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

