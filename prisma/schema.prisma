generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Applications {
  id          Int     @id @default(autoincrement())
  company     String
  firstRound  Boolean
  finalRound  Boolean
  offer       Boolean
  userId      String
  user        User    @relation(fields: [userId], references: [id])
}

model Applications_with_Outreach {
  id              Int     @id @default(autoincrement())
  company         String
  hiringManager   String
  msgToManager    String
  recruiter       String
  firstRound      Boolean
  finalRound      Boolean
  offer           Boolean
  userId          String
  user            User    @relation(fields: [userId], references: [id])
}

model Linkedin_Outreach {
  id      Int     @id @default(autoincrement())
  name    String
  company String
  message String
  result  String
  userId  String
  user    User    @relation(fields: [userId], references: [id])
}

model In_Person_Events {
  id                  Int     @id @default(autoincrement())
  event               String
  date                String
  numPeopleSpokenTo   Int
  numLinkedInRequests Int
  userId              String
  user                User    @relation(fields: [userId], references: [id])
}

model User {
  id                        String                        @id @default(cuid())
  name                      String?
  email                     String?                       @unique
  createdAt                 DateTime                      @default(now())
  applications              Applications[]
  applicationsWithOutreach  Applications_with_Outreach[]
  linkedinOutreach          Linkedin_Outreach[]
  inPersonEvents            In_Person_Events[]
  validationToken           String?
}
